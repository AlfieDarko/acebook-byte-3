<h1>News Deck</h1>

<div id='news_deck'>
  <% @posts.each_with_index do |post, idx| %>
    <div id="post_div_<%=idx%>" class="post_div">
      <div class="post_user_div">
        <strong>User:
        </strong>
        <span id="post_user_<%=idx%>"><%= post.user.username %></span>
        <br>
        <strong>Post On:
        </strong>
        <span id="post_timestamp_<%=idx%>"><%= post.created_at.localtime.strftime("%H:%M %A %d-%m-%Y") %></span>

      </div>
      <div class="parent_container_div">
        <div class="container_div">
          <div class="post_message_div">
            <p id="post_body_<%=idx%>"><%= simple_format(post.message) %></p>

          </div>
          <div class="post_options_div">
            <% if post.user.id == current_user.id %>
              <%= button_to 'Delete', post_path(post), {method: :delete, id: 'del_btn', class: 'post_button'} %>
              <%= button_to 'Edit', edit_post_path(post), {method: :get,id: 'edit_btn', class: 'post_button'} %>
            <% end %>
            <%= button_to 'Show', post_path(post), {method: :get, id: 'post_btn', class: 'post_button'} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to new_post_path do %>
New post
<% end %>
